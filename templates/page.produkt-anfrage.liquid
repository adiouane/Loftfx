      <img
        src="{{ 'loftfx-blueprint-tuer-produktanfrage_bg.jpg' | asset_url }}"
        alt="Produktanfrage Diagram"
        class="product-inquiry__image"
        width="274"
        height="420"
      >
    </div>
  </div>
